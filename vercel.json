{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "wp/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/wp-admin/(.*)",
      "dest": "/wp/wp-admin/$1"
    },
    {
      "src": "/wp-content/(.*)",
      "dest": "/wp/wp-content/$1"
    },
    {
      "src": "/wp-includes/(.*)",
      "dest": "/wp/wp-includes/$1"
    },
    {
      "src": "^/wp-login\\.php",
      "dest": "/api/wp-login.php"
    },
    {
      "src": "^/wp-cron\\.php",
      "dest": "/api/wp-cron.php"
    },
    {
      "src": "^/xmlrpc\\.php",
      "dest": "/api/xmlrpc.php"
    },
    {
      "src": "/(.*)\\.php",
      "dest": "/api/$1.php"
    },
    {
      "src": "^/favicon\\.ico",
      "dest": "/wp/favicon.ico"
    },
    {
      "src": "^/robots\\.txt",
      "dest": "/wp/robots.txt"
    },
    {
      "src": "^/$",
      "dest": "/api/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}